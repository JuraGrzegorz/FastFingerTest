@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid no-padding">
    <div class="row flex-nowrap">
        <div class="col-auto px-0">
            <div class="d-flex flex-column align-items-center align-items-sm-start text-white">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-dark text-decoration-none">
                            <i class="bi bi-bar-chart"></i> <span class="ms-1 d-none d-sm-inline">general statistics</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Admin" asp-action="UserTests" class="text-dark text-decoration-none">
                            <i class="bi bi-person"></i> <span class="ms-1 d-none d-sm-inline">User Tests</span>
                        </a>
                    </li>
                    
                    <li class="list-group-item">
                        <a asp-controller="Admin" asp-action="Users" class="text-dark text-decoration-none">
                            <i class="bi bi-people"></i> <span class="ms-1 d-none d-sm-inline">Users</span>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a asp-controller="Admin" asp-action="Upload" class="text-dark text-decoration-none">
                            <i class="bi bi-cloud-upload"></i> <span class="ms-1 d-none d-sm-inline">Upload Data</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col">
            @RenderBody()
        </div>
    </div>
</div>